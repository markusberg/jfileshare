<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" >
    <context-param>
        <param-name>TMP_PATH</param-name>
        <param-value>/export/store1/.tmp/</param-value>
    </context-param>
    <context-param>
        <param-name>PERM_PATH</param-name>
        <param-value>/export/store1/.files/</param-value>
    </context-param>
    <context-param>
        <param-name>DATABASE</param-name>
        <param-value>uploader</param-value>
    </context-param>

    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
    </filter>

    <filter>
        <filter-name>login</filter-name>
        <filter-class>filters.LoginFilter</filter-class>
    </filter>

    <filter>
        <filter-name>logout</filter-name>
        <filter-class>filters.LogoutFilter</filter-class>
    </filter>

    <filter>
        <filter-name>fileAuth</filter-name>
        <filter-class>filters.FileAuthenticationFilter</filter-class>
    </filter>

    <filter>
        <filter-name>sslRedirect</filter-name>
        <filter-class>filters.SSL_Redirector</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>sslRedirect</filter-name>
        <url-pattern>/upload**</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sslRedirect</filter-name>
        <url-pattern>/download**</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sslRedirect</filter-name>
        <url-pattern>/register**</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sslRedirect</filter-name>
        <url-pattern>/admin**</url-pattern>
    </filter-mapping>
        

    <filter-mapping>
            <filter-name>sitemesh</filter-name>
            <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/download**</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/upload**</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/register**</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/admin**</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/mainadmin**</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/mainadmin**/**/**</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/upload**</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/admin**</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/admin*/*/*</url-pattern>
    </filter-mapping>


    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/mainadmin**</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/mainadmin/users**</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/mainadmin/files**</url-pattern>
    </filter-mapping>


    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/register**</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>logout</filter-name>
        <url-pattern>/logout**</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>fileAuth</filter-name>
        <url-pattern>/download**</url-pattern>
    </filter-mapping>

    
    <!-- Servlet definitions -->
    <servlet>
        <servlet-name>Generic</servlet-name>
        <servlet-class>generic.MainServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Streamer</servlet-name>
        <servlet-class>generic.Streamer</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Vacuum</servlet-name>
        <servlet-class>utils.VacuumCleaner</servlet-class>
    </servlet>


    <!-- Servlet mappings -->
    <servlet-mapping>
        <servlet-name>Generic</servlet-name>
        <url-pattern>/upload**</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Generic</servlet-name>
        <url-pattern>/download*/*/*/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Generic</servlet-name>
        <url-pattern>/register**</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Generic</servlet-name>
        <url-pattern>/direct*/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Streamer</servlet-name>
        <url-pattern>/download/get/*/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Generic</servlet-name>
        <url-pattern>/admin**</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Generic</servlet-name>
        <url-pattern>/admin*/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Generic</servlet-name>
        <url-pattern>/admin*/*/*/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Generic</servlet-name>
        <url-pattern>/mainadmin**</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Generic</servlet-name>
        <url-pattern>/mainadmin/users**</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Generic</servlet-name>
        <url-pattern>/mainadmin/files**</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Generic</servlet-name>
        <url-pattern>/ajax**</url-pattern>
    </servlet-mapping>
</web-app>
