<table id="files">
    <tr>
        <th>Name</th>
        <th>Size</th>
    <%
                int daysFileExpiration = ((Conf) getServletContext().getAttribute("conf")).getDaysFileExpiration();
                if (daysFileExpiration != 0) {
    %>
        <th>Exp.</th>
    <%
                }
    %>

        <th>Notify a recipient</th>
    </tr>
    <%
                boolean even = false;

                for (FileItem file : files) {
    %>
    <tr class="<%=even ? "even" : "odd"%>">
        <td>
            <a href="<%= file.getURL(request.getContextPath())%>"><%=file.getName()%></a>
            <%= file.isEnabled() ? "" : "<img src=\"" + request.getContextPath() + "/images/stop.png\" alt=\"disabled\" title=\"This file is disabled for download\" />"%>
            <%= file.getPwHash() == null ? "" : "<img src=\"" + request.getContextPath() + "/images/lock.png\" alt=\"password\" title=\"This file is password protected\"/>"%>
            <%= file.getDownloads() == null ? "" : "<img src=\"" + request.getContextPath() + "/images/stock-download.png\" alt=\"download limit\" title=\"Download limit: "+file.getDownloads()+" more download(s) allowed\" />" %></td>
        </td>
        <td class="number"><%=FileItem.humanReadable(file.getSize())%></td>

    <%
                if (daysFileExpiration != 0) {
    %>
        <td><%= file.isPermanent() ? "no" : file.getDaysUntilExpiration() + " days"%></td>
    <%
                }
    %>

        <td><form action="<%= request.getContextPath()%>/ajax/file/notification" method="post" onsubmit="fileNotify('<%= file.getFid()%>'); return false;">
                <input type="text" class="textentry" name="emailRecipient" id="email_<%= file.getFid()%>"/>
                <input type="submit" name="submit" value="Notify" /></form>
        </td>
        <td><a href="<%= request.getContextPath()%>/file/edit/<%= file.getFid()%>"><img src="<%= request.getContextPath()%>/images/edit.png" alt="edit" title="Edit this file" /></a></td>
        <td><a href="<%= request.getContextPath()%>/file/log/<%= file.getFid()%>"><img src="<%= request.getContextPath()%>/images/logviewer.png" alt="logviewer" title="View the download logs of this file" /></a></td>
        <td>
            <form id="delete-<%= file.getFid()%>" action="<%= request.getContextPath()%>/file/delete/<%= file.getFid()%>" method="post"></form>
            <a href="javascript:document.getElementById('delete-<%= file.getFid()%>').submit()"><img src="<%= request.getContextPath()%>/images/trashcan_empty.png" alt="delete" title="Delete file" /></a>
        </td>
    </tr>

    <%
                    even = !even;
                }
    %>

</table>

